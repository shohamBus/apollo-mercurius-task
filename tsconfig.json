{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": ["es2022"],
    "typeRoots": ["./node_modules/@types", "./src/types"] // Add this line if it doesn't exist
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
